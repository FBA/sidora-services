<project xmlns="http://maven.apache.org/DECORATION/1.3.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/DECORATION/1.3.0 http://maven.apache.org/xsd/decoration-1.3.0.xsd">

    <skin>
        <groupId>lt.velykis.maven.skins</groupId>
        <artifactId>reflow-maven-skin</artifactId>
        <version>1.1.1</version>
    </skin>
    <custom>
        <reflowSkin>
            <theme>bootswatch-flatly</theme>
            <highlightJs>true</highlightJs>
            <brand>
                <name>Tabular Data Metadata Extraction</name>
                <href>http://github.com/ocymum/tabular-metadatahttp://ocymum.github.io/tabular-metadata/0.0.1-SNAPSHOT/</href>
            </brand>
            <slogan position="bannerLeft">Data is good. Data with meta is better.</slogan>
            <titleTemplate>%2$s | %1$s</titleTemplate>
            <toc>sidebar</toc>

            <bottomNav>
                <column>Main</column>
                <column>Documentation</column>
                <column>reports</column>
                <column>modules</column>
            </bottomNav>
            <bottomDescription> A part of the Smithsonian Institution's SIdora effort. </bottomDescription>
            <pages>
                <index project="project-id">
                    <shortTitle>Welcome</shortTitle>
                    <breadcrumbs>false</breadcrumbs>
                    <toc>false</toc>
                    <sections>
                        <carousel/>
                        <body/>
                        <sidebar/>
                        <thumbs>2</thumbs>
                        <columns>3</columns>
                    </sections>
                </index>
                <developer-info>
                    <toc>sidebar</toc>
                </developer-info>
            </pages>
        </reflowSkin>
    </custom>
    <body>
        <head/>
        <menu name="Main" inherit="top" title="Main">
            <item name="Theory of Operation" href="theory-of-operation.html"/>
        </menu>
        <menu name="Maven documentation" title="Maven documentation" ref="reports" inherit="top"
            inheritAsRef="true"/>
    </body>
</project>
